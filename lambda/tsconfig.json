{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "#/*": [
        "./node_modules/*",
        "/opt/bin/*",
        "/opt/bin/nodejs/*",
        "/opt/bin/nodejs/node_modules/*",
        "/opt/lib/*",
        "/opt/lib/nodejs/*",
        "/opt/lib/nodejs/node_modules/*",
        "/bin/*",
        "/bin/nodejs/*",
        "/bin/nodejs/node_modules/*",
        "/lib/*",
        "/lib/nodejs/*",
        "/lib/nodejs/node_modules/*",
      ]
    },
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    // cdk deployでrewriteRelativeImportExtensionsがあるとエラーになる
    // "rewriteRelativeImportExtensions": true, 
    // "verbatimModuleSyntax": true
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
